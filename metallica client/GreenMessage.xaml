<UserControl x:Class="metallica_client.GreenMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:metallica_client"
             mc:Ignorable="d"
             d:DesignHeight="350"
             d:DesignWidth="830">
    <Border CornerRadius="20,20,20,0" Background="LightGreen" Width="390">
        <Grid Background="LightGreen" Width="350">
        <Grid.RowDefinitions>
            <RowDefinition Height="51*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="user"
                   Grid.Row="0"
                   Text="percy"
                   HorizontalAlignment="Left"
                   FontSize="30" />
        <TextBlock Text="{Binding Message}"
                   FontSize="25" Grid.Row="1"/>



        </Grid>
        
    </Border>

</UserControl>
