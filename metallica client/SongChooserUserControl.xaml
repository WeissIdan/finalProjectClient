<UserControl x:Class="metallica_client.SongChooserUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:metallica_client"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Height="370"
            Width="830">
        <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
        <ComboBox Grid.Column="0" x:Name="GenreCB"/>
        <ComboBox Grid.Column="1" x:Name="PaceCB"/>
        <ComboBox Grid.Column="2" x:Name="BandKnowlegeCB"/>
            <Button Content="request songs"
                    Grid.Column="1"
                    Grid.Row="1"
                    Click="Request" />
        </Grid>
    </Border>
</UserControl>
